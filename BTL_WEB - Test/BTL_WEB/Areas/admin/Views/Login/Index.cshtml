    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>




    <form action="/admin/Login/SignUp" method="post">
        <div class="modal" id="myModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title">Đăng kí thành viên</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <!-- Modal body -->

                    <div class="modal-body" style="height:750px;">
                        <label style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;font-weight:bold;">Họ và tên</label> <br />
                        <input style="width:470px;" class="inputedit" type="text" name="ten" placeholder="Họ và tên" required /><br />

                        <label style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;font-weight:bold;">Tên đăng nhập</label> <br />
                        <input style="width:470px;" class="inputedit" type="text" name="tentaikhoan" placeholder="Tên đăng nhập" required /><br />

                        <label style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;font-weight:bold;">Mật khẩu</label> <br />
                        <input style="width:470px;" class="inputedit" type="password" name="matkhau" placeholder="Mật khẩu" required /><br />

                        <label style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;font-weight:bold;">Xác nhận mật khẩu</label> <br />
                        <input style="width:470px;" class="inputedit" type="password" name="xacnhanmatkhau" placeholder="Xác nhận mật khẩu" required /><br />

                        <label style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;font-weight:bold;">Email</label> <br />
                        <input style="width:470px;" class="inputedit" type="email" name="email" placeholder="Email" required /><br />

                        <label style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;font-weight:bold;">Địa chỉ</label> <br />
                        <input style="width:470px;" class="inputedit" type="text" name="diachi" placeholder="Địa chỉ" required /><br />

                        <label style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;font-weight:bold;">Số điện thoại</label> <br />
                        <input id="mobile" style="width:470px;" class="inputedit" type="text" name="sdt" placeholder="Số điện thoại" required /><br />

                        <label style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;font-weight:bold;">Giới tính</label> <br />
                        <select name="gioitinh" style=" padding-left:215px; width:470px;height:45px; background-color:#5F9EA0">
                            <option value="Nam">Nam</option>
                            <option value="Nu">Nữ</option>
                        </select><br />
                        @*<input style="width:470px; height:45px" class="inputedit" type="text" name="gioitinh" placeholder="Giới tính" required /><br />*@

                        <label style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;font-weight:bold;">Ngày sinh</label> <br />
                        <input style="width:470px; height:45px" class="inputedit" type="date" name="ngaysinh" placeholder="Ngày tháng năm sinh" required /><br />
                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer" style="display:inline-flex">
                        <button type="submit" class="btn btn-success checkmobile">Đăng kí</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>

                </div>
            </div>
        </div>
    </form>



